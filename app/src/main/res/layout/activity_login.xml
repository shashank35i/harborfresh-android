<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hf_background">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollLogin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Back arrow -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="Back"
                android:padding="2dp"
                android:src="@drawable/ic_back_24"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/hf_on_background" />

            <!-- Logo card (square rounded) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/logoCard"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_marginTop="22dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/hf_primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Logo"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_brand_mark" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:fontFamily="sans-serif-medium"
                android:text="Welcome back"
                android:textColor="@color/hf_on_background"
                android:textSize="34sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/logoCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Sign in to keep your dock-to-door orders moving"
                android:textColor="@color/hf_on_surface_variant"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Email label -->
            <TextView
                android:id="@+id/tvEmailLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="Email"
                android:textColor="@color/hf_on_background"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Email input -->
            <FrameLayout
                android:id="@+id/tilEmail"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_input_outline"
                app:layout_constraintTop_toBottomOf="@id/tvEmailLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="your@email.com"
                    android:inputType="textEmailAddress"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:textColor="@color/hf_on_background"
                    android:textColorHint="@color/hf_on_surface_variant"
                    android:textSize="18sp" />
            </FrameLayout>

            <!-- Password label -->
            <TextView
                android:id="@+id/tvPasswordLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="Password"
                android:textColor="@color/hf_on_background"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tilEmail"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Password input (with eye icon) -->
            <FrameLayout
                android:id="@+id/tilPassword"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_input_outline"
                app:layout_constraintTop_toBottomOf="@id/tvPasswordLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="44dp"
                    android:background="@android:color/transparent"
                    android:hint="Enter your password"
                    android:inputType="textPassword"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:textColor="@color/hf_on_background"
                    android:textColorHint="@color/hf_on_surface_variant"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/btnEye"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="14dp"
                    android:contentDescription="Show password"
                    android:src="@drawable/ic_eye"
                    app:tint="@color/hf_on_surface_variant" />
            </FrameLayout>

            <!-- Forgot password -->
            <TextView
                android:id="@+id/tvForgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Forgot password?"
                android:textColor="@color/hf_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tilPassword"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Sign In button (big pill) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSignIn"
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_marginTop="26dp"
                android:text="Sign In"
                android:textAllCaps="false"
                android:textColor="@color/hf_on_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="@color/hf_primary"
                app:cornerRadius="22dp"
                app:layout_constraintTop_toBottomOf="@id/tvForgot"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Don't have an account? Sign up -->
            <LinearLayout
                android:id="@+id/rowSignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/btnSignIn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tvNoAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't have an account? "
                    android:textColor="@color/hf_on_surface_variant"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvSignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign up"
                    android:textColor="@color/hf_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Are you a seller? -->
            <TextView
                android:id="@+id/tvFisherman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="Are you a seller?"
                android:textColor="@color/hf_on_surface_variant"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/rowSignup"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Seller sign in button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSeller"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="12dp"
                android:text="Sign in as Seller"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/hf_primary"
                app:backgroundTint="@color/hf_surface_variant"
                app:cornerRadius="18dp"
                app:icon="@drawable/ic_briefcase"
                app:iconGravity="textStart"
                app:iconPadding="10dp"
                app:iconTint="@color/hf_primary"
                app:layout_constraintTop_toBottomOf="@id/tvFisherman"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
