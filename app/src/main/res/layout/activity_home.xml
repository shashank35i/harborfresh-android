<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootHomeActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hf_background">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomBar" />

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/hf_surface">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/hf_surface_variant" />

        <LinearLayout
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="5"
            android:background="@color/hf_surface">

            <LinearLayout
                android:id="@+id/navHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/bg_nav_item_ripple_purple"
                android:paddingTop="8dp"
                android:paddingBottom="6dp">

                <ImageView
                    android:id="@+id/ivHome"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home"
                    android:tint="@color/hf_primary" />

                <TextView
                    android:id="@+id/tvHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Home"
                    android:textSize="12sp"
                    android:textColor="@color/hf_primary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/navCategories"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/bg_nav_item_ripple_purple"
                android:paddingTop="8dp"
                android:paddingBottom="6dp">

                <ImageView
                    android:id="@+id/ivCategories"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_grid"
                    android:tint="@color/hf_on_surface_variant" />

                <TextView
                    android:id="@+id/tvCategoriesTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Categories"
                    android:textSize="12sp"
                    android:textColor="@color/hf_on_surface_variant" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/navOrders"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/bg_nav_item_ripple_purple"
                android:paddingTop="8dp"
                android:paddingBottom="6dp">

                <ImageView
                    android:id="@+id/ivOrders"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_orders"
                    android:tint="@color/hf_on_surface_variant" />

                <TextView
                    android:id="@+id/tvOrders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Orders"
                    android:textSize="12sp"
                    android:textColor="@color/hf_on_surface_variant" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/navCart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/bg_nav_item_ripple_purple"
                android:paddingTop="8dp"
                android:paddingBottom="6dp">

                <ImageView
                    android:id="@+id/ivCart"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_cart"
                    android:tint="@color/hf_on_surface_variant" />

                <TextView
                    android:id="@+id/tvCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Cart"
                    android:textSize="12sp"
                    android:textColor="@color/hf_on_surface_variant" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/navProfile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/bg_nav_item_ripple_purple"
                android:paddingTop="8dp"
                android:paddingBottom="6dp">

                <ImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_profile"
                    android:tint="@color/hf_on_surface_variant" />

                <TextView
                    android:id="@+id/tvProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Profile"
                    android:textSize="12sp"
                    android:textColor="@color/hf_on_surface_variant" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
