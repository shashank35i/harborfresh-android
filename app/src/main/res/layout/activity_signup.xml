<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootSignup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hf_background"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="18dp"
    android:paddingBottom="18dp">

    <!-- Back -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:contentDescription="Back"
        android:src="@drawable/ic_back_24"
        app:tint="@color/hf_on_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Bottom fixed: Register as Seller (never cut) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRegisterSeller"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:text="Register as Seller"
        android:textAllCaps="false"
        android:textColor="@color/hf_primary"
        android:textSize="17sp"
        android:textStyle="bold"
        app:backgroundTint="@color/hf_surface_variant"
        app:cornerRadius="18dp"
        app:icon="@drawable/ic_briefcase"
        app:iconGravity="textStart"
        app:iconPadding="10dp"
        app:iconTint="@color/hf_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Already have account row (above seller button) -->
    <LinearLayout
        android:id="@+id/rowSignin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/btnRegisterSeller"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvAlready"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? "
            android:textColor="@color/hf_on_surface_variant"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textColor="@color/hf_primary"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Create Account button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSignup"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="14dp"
        android:text="Create Account"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@color/hf_primary"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@id/rowSignin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/progressSignup"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btnSignup"
        app:layout_constraintBottom_toTopOf="@id/rowSignin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Terms -->
    <TextView
        android:id="@+id/tvTerms"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:text="By signing up, you agree to our"
        android:textColor="@color/hf_on_surface_variant"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@id/btnSignup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvLinks"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Terms of Service  and  Privacy Policy"
        android:textColor="@color/hf_primary"
        android:textSize="13sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toTopOf="@id/tvTerms"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- FORM CONTAINER: constrained between subtitle and links -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/formArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintBottom_toTopOf="@id/tvLinks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Full Name label -->
        <TextView
            android:id="@+id/tvNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Full Name"
            android:textColor="@color/hf_on_background"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Full Name input (drawable border) -->
        <EditText
            android:id="@+id/etFullName"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_input_outline"
            android:hint="John Doe"
            android:inputType="textPersonName"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/hf_on_background"
            android:textColorHint="@color/hf_on_surface_variant"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@id/tvNameLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Email label -->
        <TextView
            android:id="@+id/tvEmailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Email"
            android:textColor="@color/hf_on_background"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/etFullName"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Email input -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_input_outline"
            android:hint="your@email.com"
            android:inputType="textEmailAddress"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/hf_on_background"
            android:textColorHint="@color/hf_on_surface_variant"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@id/tvEmailLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Phone label -->
        <TextView
            android:id="@+id/tvPhoneLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Phone Number"
            android:textColor="@color/hf_on_background"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/etEmail"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Phone input -->
        <EditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_input_outline"
            android:hint="+91 98765 43210"
            android:inputType="phone"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/hf_on_background"
            android:textColorHint="@color/hf_on_surface_variant"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@id/tvPhoneLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Password label -->
        <TextView
            android:id="@+id/tvPasswordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Password"
            android:textColor="@color/hf_on_background"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/etPhoneNumber"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Password field with eye inside border -->
        <FrameLayout
            android:id="@+id/passwordBox"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_input_outline"
            app:layout_constraintTop_toBottomOf="@id/tvPasswordLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="44dp"
                android:background="@android:color/transparent"
                android:hint="Create a strong password"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/hf_on_background"
                android:textColorHint="@color/hf_on_surface_variant"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/btnEye"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="14dp"
                android:contentDescription="Show password"
                android:src="@drawable/ic_eye"
                app:tint="@color/hf_on_surface_variant" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Title / subtitle block (top content) -->
    <TextView
        android:id="@+id/tvTitleAnchor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Create account"
        android:textColor="@color/hf_on_background"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Create your HarborFresh account for\ndock-fresh delivery"
        android:textColor="@color/hf_on_surface_variant"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
