<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootTrackOrder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hf_background">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="96dp"
        app:cardBackgroundColor="@color/hf_primary"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:paddingTop="18dp"
            android:paddingBottom="14dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="6dp"
                android:src="@drawable/ic_back"
                android:tint="@color/hf_on_primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnRight"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:cardBackgroundColor="@color/hf_primary"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="6dp"
                    android:src="@drawable/ic_map_24"
                    android:tint="@color/hf_on_primary" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Track Order"
                android:textColor="@color/hf_on_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnBack"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="6dp" />

            <TextView
                android:id="@+id/tvOrderId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="#ORD-0000"
                android:textColor="@color/hf_on_surface_variant"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="2dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="14dp"
            android:paddingBottom="18dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardStatusTop"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                app:cardBackgroundColor="@color/hf_surface"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/hf_surface_variant"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp">

                    <TextView
                        android:id="@+id/tvOnTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="On Time"
                        android:textColor="@color/hf_tertiary"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMap"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                app:cardBackgroundColor="@color/hf_surface"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/hf_surface_variant"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mapArea"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:cardBackgroundColor="@color/hf_surface_variant"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/legendRow"
                        android:layout_margin="10dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.google.android.gms.maps.MapView
                                android:id="@+id/mapView"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/chipDistance"
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                app:cardBackgroundColor="@color/hf_surface"
                                app:cardCornerRadius="14dp"
                                app:cardElevation="0dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="10dp">

                                    <ImageView
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:src="@drawable/ic_pin"
                                        android:tint="@color/hf_on_background"
                                        android:layout_marginEnd="6dp" />

                                    <TextView
                                        android:id="@+id/tvDistance"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="2.3 km away"
                                        android:textColor="@color/hf_on_background"
                                        android:textSize="11sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/chipLive"
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                app:cardBackgroundColor="@color/hf_tertiary"
                                app:cardCornerRadius="14dp"
                                app:cardElevation="0dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginEnd="10dp"
                                android:layout_marginTop="10dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="10dp">

                                    <View
                                        android:layout_width="8dp"
                                        android:layout_height="8dp"
                                        android:background="@drawable/bg_dot_light_hard"
                                        android:layout_marginEnd="6dp" />

                                    <TextView
                                        android:id="@+id/tvLive"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Live"
                                        android:textColor="@color/hf_on_primary"
                                        android:textSize="11sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:id="@+id/tvMapHint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Map loading"
                                android:textColor="@color/hf_tertiary_container"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />

                            <TextView
                                android:id="@+id/tvStart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Start"
                                android:textColor="@color/hf_tertiary_container"
                                android:textSize="10sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginStart="12dp"
                                android:layout_marginBottom="10dp" />

                            <TextView
                                android:id="@+id/tvYou"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="You"
                                android:textColor="@color/hf_tertiary_container"
                                android:textSize="10sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginEnd="12dp"
                                android:layout_marginTop="54dp" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:id="@+id/legendRow"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/bg_dot_green"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pickup Point"
                            android:textColor="@color/hf_on_surface_variant"
                            android:textSize="11sp"
                            android:layout_marginEnd="14dp" />

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/bg_dot_orange"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delivery Partner"
                            android:textColor="@color/hf_on_surface_variant"
                            android:textSize="11sp"
                            android:layout_marginEnd="14dp" />

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/bg_dot_navy"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your Location"
                            android:textColor="@color/hf_on_surface_variant"
                            android:textSize="11sp" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp" />
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPartner"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                app:cardBackgroundColor="@color/hf_surface"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/hf_surface_variant"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/avatar"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        app:cardBackgroundColor="@color/hf_surface_variant"
                        app:cardCornerRadius="22dp"
                        app:cardElevation="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:src="@drawable/ic_avatar_placeholder"
                            android:tint="@color/hf_on_surface_variant" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tvPartnerName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Delivery Partner"
                        android:textColor="@color/hf_on_background"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/avatar"
                        app:layout_constraintTop_toTopOf="@id/avatar"
                        app:layout_constraintEnd_toStartOf="@id/btnCall"
                        android:layout_marginStart="12dp" />

                    <TextView
                        android:id="@+id/tvPartnerRole"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Delivery Partner"
                        android:textColor="@color/hf_on_surface_variant"
                        android:textSize="11sp"
                        app:layout_constraintStart_toStartOf="@id/tvPartnerName"
                        app:layout_constraintTop_toBottomOf="@id/tvPartnerName"
                        app:layout_constraintEnd_toStartOf="@id/btnCall"
                        android:layout_marginTop="2dp" />

                    <LinearLayout
                        android:id="@+id/rowPartnerRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        app:layout_constraintStart_toStartOf="@id/tvPartnerName"
                        app:layout_constraintTop_toBottomOf="@id/tvPartnerRole"
                        android:layout_marginTop="6dp">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_star_16"
                            android:tint="@color/hf_secondary" />

                        <TextView
                            android:id="@+id/tvRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.8"
                            android:textColor="@color/hf_on_background"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:layout_marginStart="6dp" />
                    </LinearLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnCall"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        app:cardBackgroundColor="@color/hf_surface_variant"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:layout_constraintEnd_toStartOf="@id/btnChat"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:src="@android:drawable/ic_menu_call"
                            android:tint="@color/hf_primary" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnChat"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        app:cardBackgroundColor="@color/hf_surface_variant"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp"
                            android:src="@android:drawable/ic_dialog_email"
                            android:tint="@color/hf_primary" />
                    </com.google.android.material.card.MaterialCardView>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="14dp" />

            <TextView
                android:id="@+id/tvOrderStatusTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order Status"
                android:textColor="@color/hf_on_background"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTimeline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/hf_surface"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/hf_surface_variant"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <View
                        android:id="@+id/line"
                        android:layout_width="2dp"
                        android:layout_height="0dp"
                        android:background="@color/hf_surface_variant"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="12dp" />
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/dot1"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        app:cardBackgroundColor="@color/hf_tertiary"
                        app:cardCornerRadius="13dp"
                        app:cardElevation="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/dot1Check"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="6dp"
                            android:src="@drawable/ic_check_24"
                            android:tint="@color/hf_on_primary" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tvS1Title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Order Placed"
                        android:textColor="@color/hf_on_background"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/dot1"
                        app:layout_constraintTop_toTopOf="@id/dot1"
                        app:layout_constraintEnd_toStartOf="@id/tvS1Time"
                        android:layout_marginStart="12dp" />

                    <TextView
                        android:id="@+id/tvS1Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:30 AM"
                        android:textColor="@color/hf_on_surface_variant"
                        android:textSize="10sp"
                        android:gravity="end"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvS1Title" />

                    <TextView
                        android:id="@+id/tvS1Sub"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Your order has been confirmed"
                        android:textColor="@color/hf_on_surface_variant"
                        android:textSize="11sp"
                        app:layout_constraintStart_toStartOf="@id/tvS1Title"
                        app:layout_constraintTop_toBottomOf="@id/tvS1Title"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="3dp" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/dot2"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        app:cardBackgroundColor="@color/hf_tertiary"
                        app:cardCornerRadius="13dp"
                        app:cardElevation="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvS1Sub"
                        android:layout_marginTop="16dp">

                        <ImageView
                            android:id="@+id/dot2Check"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="6dp"
                            android:src="@drawable/ic_check_24"
                            android:tint="@color/hf_on_primary" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tvS2Title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Preparing"
                        android:textColor="@color/hf_on_background"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/dot2"
                        app:layout_constraintTop_toTopOf="@id/dot2"
                        app:layout_constraintEnd_toStartOf="@id/tvS2Time"
                        android:layout_marginStart="12dp" />

                    <TextView
                        android:id="@+id/tvS2Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11:00 AM"
                        android:textColor="@color/hf_on_surface_variant"
                        android:textSize="10sp"
                        android:gravity="end"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvS2Title" />

                    <TextView
                        android:id="@+id/tvS2Sub"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Fresh catch being cleaned and packed"
                        android:textColor="@color/hf_on_surface_variant"
                        android:textSize="11sp"
                        app:layout_constraintStart_toStartOf="@id/tvS2Title"
                        app:layout_constraintTop_toBottomOf="@id/tvS2Title"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="3dp" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/dot3"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        app:cardBackgroundColor="@color/hf_primary"
                        app:cardCornerRadius="13dp"
                        app:cardElevation="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvS2Sub"
                        android:layout_marginTop="16dp" />

                    <TextView
                        android:id="@+id/tvS3Title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Out for Delivery"
                        android:textColor="@color/hf_on_background"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/dot3"
                        app:layout_constraintTop_toTopOf="@id/dot3"
                        app:layout_constraintEnd_toStartOf="@id/tvS3Time"
                        android:layout_marginStart="12dp" />

                    <TextView
                        android:id="@+id/tvS3Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1:30 PM"
                        android:textColor="@color/hf_on_surface_variant"
                        android:textSize="10sp"
                        android:gravity="end"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvS3Title" />

                    <TextView
                        android:id="@+id/tvS3Sub"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="On the way to your location"
                        android:textColor="@color/hf_on_surface_variant"
                        android:textSize="11sp"
                        app:layout_constraintStart_toStartOf="@id/tvS3Title"
                        app:layout_constraintTop_toBottomOf="@id/tvS3Title"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="3dp" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/dot4"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        app:cardBackgroundColor="@color/hf_surface_variant"
                        app:cardCornerRadius="13dp"
                        app:cardElevation="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvS3Sub"
                        android:layout_marginTop="16dp" />

                    <TextView
                        android:id="@+id/tvS4Title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Delivered"
                        android:textColor="@color/hf_on_background"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/dot4"
                        app:layout_constraintTop_toTopOf="@id/dot4"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="12dp" />

                    <TextView
                        android:id="@+id/tvS4Sub"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Enjoy your dock-fresh order"
                        android:textColor="@color/hf_on_surface_variant"
                        android:textSize="11sp"
                        app:layout_constraintStart_toStartOf="@id/tvS4Title"
                        app:layout_constraintTop_toBottomOf="@id/tvS4Title"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="3dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNeedHelp"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Need Help?"
                android:textAllCaps="false"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/hf_primary"
                app:cornerRadius="14dp"
                app:backgroundTint="@color/hf_surface"
                app:strokeColor="@color/hf_primary"
                app:strokeWidth="1dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
