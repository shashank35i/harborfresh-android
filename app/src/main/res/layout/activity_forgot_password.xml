<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootForgot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hf_background"
    android:paddingStart="22dp"
    android:paddingEnd="22dp"
    android:paddingTop="18dp"
    android:paddingBottom="18dp">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:contentDescription="Back"
        android:src="@drawable/ic_back_24"
        app:tint="@color/hf_on_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Reset password"
        android:textColor="@color/hf_on_background"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Enter your email to receive an OTP, then choose a new password."
        android:textColor="@color/hf_on_surface_variant"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollForm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="18dp"
            android:paddingBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvEmailLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="@color/hf_on_background"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/bg_input_outline"
                    android:hint="your@email.com"
                    android:inputType="textEmailAddress"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="@color/hf_on_background"
                    android:textColorHint="@color/hf_on_surface_variant"
                    android:textSize="17sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSendOtp"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="12dp"
                    android:text="Send OTP"
                    android:textAllCaps="false"
                    android:textColor="@color/hf_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/hf_surface_variant"
                    app:cornerRadius="14dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                android:background="@color/hf_surface_variant" />

            <TextView
                android:id="@+id/tvOtpLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OTP"
                android:textColor="@color/hf_on_background"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etOtp"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_input_outline"
                android:hint="6-digit code"
                android:inputType="number"
                android:maxLength="6"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/hf_on_background"
                android:textColorHint="@color/hf_on_surface_variant"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tvNewPassLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="New password"
                android:textColor="@color/hf_on_background"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etNewPassword"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_input_outline"
                android:hint="Create a strong password"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/hf_on_background"
                android:textColorHint="@color/hf_on_surface_variant"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tvConfirmLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Confirm password"
                android:textColor="@color/hf_on_background"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_input_outline"
                android:hint="Re-enter password"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/hf_on_background"
                android:textColorHint="@color/hf_on_surface_variant"
                android:textSize="17sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnResetPassword"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="18dp"
                android:text="Update password"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                app:backgroundTint="@color/hf_primary"
                app:cornerRadius="18dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
