<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hf_background">

    <View
        android:id="@+id/headerBg"
        android:layout_width="0dp"
        android:layout_height="320dp"
        android:background="@drawable/bg_seller_header_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollDash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="22dp"
                android:paddingEnd="22dp"
                android:paddingTop="22dp"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/profileRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:id="@+id/avatarWrap"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/imgAvatar"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_avatar_placeholder"
                            android:scaleType="centerCrop"
                            android:background="@drawable/bg_circle_white"
                            android:clipToOutline="true" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tvSellerName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:text="Seller"
                        android:textColor="@android:color/white"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/avatarWrap"
                        app:layout_constraintTop_toTopOf="@id/avatarWrap"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvSellerLoc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="4dp"
                        android:text="Location"
                        android:textColor="@color/hf_on_surface_variant"
                        android:textSize="15sp"
                        app:layout_constraintStart_toEndOf="@id/avatarWrap"
                        app:layout_constraintTop_toBottomOf="@id/tvSellerName"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvSetLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Set location"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@id/tvSellerLoc"
                        app:layout_constraintTop_toBottomOf="@id/tvSellerLoc" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/topCardsRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="130dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_card_white_26"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:padding="18dp">

                        <FrameLayout
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:background="@drawable/bg_icon_square_dark_18"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_box"
                                app:tint="@android:color/white" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tvCard1Value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:text="0"
                            android:textColor="@color/hf_on_background"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Orders"
                            android:textColor="@color/hf_on_surface_variant"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="130dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_card_white_26"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:padding="18dp">

                        <FrameLayout
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:background="@drawable/bg_icon_square_green_18"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_trend"
                                app:tint="@android:color/white" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tvCard2Value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:text="â‚¹0"

                            android:textColor="@color/hf_on_background"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Revenue"
                            android:textColor="@color/hf_on_surface_variant"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="130dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_card_white_26"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:padding="18dp">

                        <FrameLayout
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:background="@drawable/bg_icon_square_orange_18"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_clock"
                                app:tint="@android:color/white" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/tvCard3Value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:text="0"
                            android:textColor="@color/hf_on_background"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Pending"
                            android:textColor="@color/hf_on_surface_variant"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_body_top_round"
                android:paddingStart="22dp"
                android:paddingEnd="22dp"
                android:paddingTop="22dp"
                android:paddingBottom="26dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnAddCatch"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_button_primary_dark_22"
                        android:text="Add New\nCatch"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnViewOrders"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button_green_22"
                        android:text="View\nOrders"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvRecent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:text="Recent Orders"
                    android:textColor="@color/hf_on_background"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRecentOrders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:clipToPadding="false" />

                <LinearLayout
                    android:id="@+id/emptyRecent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="18dp"
                    android:background="@drawable/bg_card_white_26"
                    android:visibility="gone"
                    android:layout_marginTop="12dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_box"
                        android:tint="@color/hf_on_surface_variant" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="No recent orders"
                        android:textColor="@color/hf_on_background"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
