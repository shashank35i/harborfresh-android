<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootProductDetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hf_background">

    <!-- Top image area -->
    <FrameLayout
        android:id="@+id/topImage"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:background="@color/hf_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivProductHero"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@drawable/bg_image_placeholder"
            android:contentDescription="@null" />

        <!-- Back -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnBackWrap"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/hf_surface">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:src="@drawable/ic_back"
                android:tint="@color/hf_on_background"
                android:contentDescription="@null" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Right icons -->
        <LinearLayout
            android:id="@+id/rightIcons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/hf_surface">

                <ImageView
                    android:id="@+id/ivFav"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:src="@android:drawable/btn_star_big_off"
                    android:tint="@color/hf_on_background"
                    android:contentDescription="@null" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/hf_surface">

                <ImageView
                    android:id="@+id/ivShare"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:src="@android:drawable/ic_menu_share"
                    android:tint="@color/hf_on_background"
                    android:contentDescription="@null" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </FrameLayout>

    <!-- Bottom sticky bar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/hf_surface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/tvTotalLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Price"
                android:textColor="@color/hf_on_surface_variant"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="₹ 650"
                android:textColor="@color/hf_on_background"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTotalLabel" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddToCart"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:text="Add to Cart"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/hf_on_primary"
                android:backgroundTint="@color/hf_primary"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvTotalPrice"
                android:layout_marginStart="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnProceedCheckout"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:text="Proceed to Checkout"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@color/hf_primary"
                app:backgroundTint="@color/hf_surface_variant"
                app:cornerRadius="12dp"
                app:layout_constraintTop_toBottomOf="@id/btnAddToCart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- White sheet -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/sheet"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-24dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/hf_surface"
        app:layout_constraintTop_toBottomOf="@id/topImage"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollSheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sheetContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:paddingTop="14dp"
                android:paddingBottom="18dp">

                <!-- Fresh chip -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/chipFresh"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    app:cardCornerRadius="13dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/hf_secondary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:gravity="center"
                        android:text="Fresh"
                        android:textColor="@color/hf_on_primary"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Squid (Cleaned)"
                    android:textColor="@color/hf_on_background"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/chipFresh"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <LinearLayout
                    android:id="@+id/rowPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/tvName"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹ 650"
                        android:textColor="@color/hf_on_background"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPerKg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="/ kg"
                        android:textColor="@color/hf_on_surface_variant"
                        android:textSize="12sp"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

                <!-- Rating + time + location row -->
                <LinearLayout
                    android:id="@+id/rowMeta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/rowPrice"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@android:drawable/btn_star_big_on"
                            android:tint="@color/hf_secondary"
                            android:contentDescription="@null" />

                        <TextView
                            android:id="@+id/tvRatingValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="4.5"
                            android:textColor="@color/hf_on_background"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvReviewCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="(120)"
                            android:textColor="@color/hf_on_surface_variant"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="14dp"
                        android:layout_height="1dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@android:drawable/ic_lock_idle_alarm"
                            android:tint="@color/hf_on_surface_variant"
                            android:contentDescription="@null" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="5:30 AM  •  Today"
                            android:textColor="@color/hf_on_surface_variant"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@android:drawable/ic_menu_mylocation"
                            android:tint="@color/hf_on_surface_variant"
                            android:contentDescription="@null" />

                        <TextView
                            android:id="@+id/tvLocationValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="Kochi, Kerala"
                            android:textColor="@color/hf_on_surface_variant"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

                <!-- About -->
                <TextView
                    android:id="@+id/tvAboutTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="About"
                    android:textColor="@color/hf_on_background"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/rowMeta"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvAbout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Pre-cleaned squid rings and tentacles.\nReady to cook for calamari or stir-fry."
                    android:textColor="@color/hf_on_surface_variant"
                    android:textSize="12sp"
                    android:lineSpacingExtra="2dp"
                    app:layout_constraintTop_toBottomOf="@id/tvAboutTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Seller card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardSeller"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/hf_surface_variant"
                    app:cardBackgroundColor="@color/hf_surface"
                    app:layout_constraintTop_toBottomOf="@id/tvAbout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/ivSeller"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:src="@android:drawable/sym_def_app_icon"
                            android:scaleType="centerCrop"
                            android:contentDescription="@null"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <TextView
                            android:id="@+id/tvSellerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Raju Mahadev"
                            android:textColor="@color/hf_on_background"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@id/ivSeller"
                            app:layout_constraintTop_toTopOf="@id/ivSeller"
                            android:layout_marginStart="10dp" />

                        <LinearLayout
                            android:id="@+id/rowVerified"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            app:layout_constraintStart_toEndOf="@id/ivSeller"
                            app:layout_constraintTop_toBottomOf="@id/tvSellerName"
                            android:layout_marginStart="10dp">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@android:drawable/checkbox_on_background"
                                android:tint="@color/hf_tertiary"
                                android:contentDescription="@null" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:text="Verified"
                                android:textColor="@color/hf_tertiary"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/rowSellerRight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@android:drawable/btn_star_big_on"
                                android:tint="@color/hf_secondary"
                                android:contentDescription="@null" />

                            <TextView
                                android:id="@+id/tvSellerRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:text="4.9"
                                android:textColor="@color/hf_on_background"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="•  241 reviews"
                                android:textColor="@color/hf_on_surface_variant"
                                android:textSize="11sp" />
                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tvMoreFromSeller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="More from this seller"
                    android:textColor="@color/hf_on_background"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/cardSeller"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSellerMore"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="10dp"
                    android:overScrollMode="never"
                    android:clipToPadding="false"
                    android:paddingEnd="4dp"
                    app:layout_constraintTop_toBottomOf="@id/tvMoreFromSeller"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvSellerMoreEmpty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="No other products from this seller yet."
                    android:textColor="@color/hf_on_surface_variant"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/tvMoreFromSeller"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrierSellerMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="rvSellerMore,tvSellerMoreEmpty" />

                <!-- In Cart -->
                <TextView
                    android:id="@+id/tvCartTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="In Your Cart"
                    android:textColor="@color/hf_on_background"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/barrierSellerMore"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvCartEmpty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Cart is empty"
                    android:textColor="@color/hf_on_surface_variant"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/tvCartTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCartItems"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/tvCartEmpty"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrierCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="rvCartItems,tvCartEmpty" />

                <!-- Quantity -->
                <TextView
                    android:id="@+id/tvQtyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="Quantity"
                    android:textColor="@color/hf_on_background"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/barrierCart"
                    app:layout_constraintStart_toStartOf="parent" />

                <LinearLayout
                    android:id="@+id/rowQty"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toBottomOf="@id/tvQtyTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnMinusWrap"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/hf_surface_variant"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/hf_surface_variant">

                        <ImageView
                            android:id="@+id/btnMinus"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:src="@drawable/ic_minus_24"
                            android:tint="@color/hf_on_background"
                            android:contentDescription="@null" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tvQtyValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/hf_on_background"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnPlusWrap"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/hf_primary">

                        <ImageView
                            android:id="@+id/btnPlus"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:src="@android:drawable/ic_input_add"
                            android:tint="@color/hf_on_primary"
                            android:contentDescription="@null" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tvQtyUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="kg"
                        android:textColor="@color/hf_on_surface_variant"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    app:layout_constraintTop_toBottomOf="@id/rowQty"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
