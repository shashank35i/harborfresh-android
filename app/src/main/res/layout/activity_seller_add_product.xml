<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootAddProduct"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hf_background">

    <!-- Top App Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:background="@color/hf_background"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="18dp"
            android:contentDescription="Back"
            android:src="@drawable/ic_back_24"
            app:tint="@color/hf_on_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <LinearLayout
            android:id="@+id/titleBlock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="18dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New Product"
                android:textColor="@color/hf_on_background"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="List your fresh catch"
                android:textColor="@color/hf_on_surface_variant"
                android:textSize="14sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Bottom Primary Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddToInventory"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="18dp"
        style="@style/HF.Button.Primary"
        android:text="Add to Inventory"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scroll Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/btnAddToInventory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp">

            <!-- Product Photo -->
            <TextView
                android:id="@+id/tvPhotoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Photo"
                android:textColor="@color/hf_on_background"
                android:textSize="14sp"
                android:textStyle="bold" />

            <FrameLayout
                android:id="@+id/cardPhoto"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_input_outline"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ivPhotoPreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:background="@drawable/bg_input_outline" />

                <ImageButton
                    android:id="@+id/btnRemovePhoto"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="top|end"
                    android:background="@drawable/bg_icon_soft_dark"
                    android:padding="6dp"
                    android:src="@drawable/ic_close"
                    android:tint="@android:color/white"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/photoPlaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:background="@drawable/bg_icon_soft_dark"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_camera"
                            android:tint="@android:color/white" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tvPhotoStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Tap to add a photo"
                        android:textColor="@color/hf_on_surface_variant"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPhotoHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Supported: JPG, PNG"
                        android:textColor="@color/hf_on_surface_variant"
                        android:textSize="14sp" />
                </LinearLayout>

            </FrameLayout>

            <!-- Product Name -->
            <TextView
                android:id="@+id/tvNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Product Name"
                android:textColor="@color/hf_on_background"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etProductName"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_input_outline"
                android:hint="e.g., King Mackerel"
                android:inputType="text"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:textColor="@color/hf_on_background"
                android:textColorHint="@color/hf_on_surface_variant"
                android:textSize="16sp" />

            <!-- Price + Weight -->
            <LinearLayout
                android:id="@+id/rowPriceWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp">

                    <TextView
                        android:id="@+id/tvPriceLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price per kg"
                        android:textColor="@color/hf_on_background"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etPrice"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_input_outline"
                        android:hint="850"
                        android:inputType="numberDecimal"
                        android:paddingStart="18dp"
                        android:paddingEnd="18dp"
                        android:textColor="@color/hf_on_background"
                        android:textColorHint="@color/hf_on_surface_variant"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:id="@+id/tvWeightLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Available Weight"
                        android:textColor="@color/hf_on_background"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etWeight"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_input_outline"
                        android:hint="10 kg"
                        android:inputType="text"
                        android:paddingStart="18dp"
                        android:paddingEnd="18dp"
                        android:textColor="@color/hf_on_background"
                        android:textColorHint="@color/hf_on_surface_variant"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <!-- Category -->
            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="@color/hf_on_background"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="22dp" />

            <GridLayout
                android:id="@+id/categoryGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:columnCount="3"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true">

                <LinearLayout
                    android:id="@+id/cardCatFish"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_category_selected"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŸ"
                        android:textSize="32sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Fish"
                        android:textColor="@color/hf_primary"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardCatPrawns"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_category_unselected"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:text="ðŸ¦"
                        android:textSize="32sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Prawns"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/hf_on_background"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardCatCrabs"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_category_unselected"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:text="ðŸ¦€"
                        android:textSize="32sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Crabs"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/hf_on_background"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardCatLobster"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_category_unselected"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:text="ðŸ¦ž"
                        android:textSize="32sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Lobster"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/hf_on_background"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardCatShellfish"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_category_unselected"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:text="ðŸ¦ª"
                        android:textSize="32sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Shellfish"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/hf_on_background"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardCatOthers"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_category_unselected"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:text="ðŸ™"
                        android:textSize="32sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Others"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/hf_on_background"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </GridLayout>

            <!-- Freshness -->
            <TextView
                android:id="@+id/tvFreshness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Freshness"
                android:textColor="@color/hf_on_background"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="18dp" />

            <LinearLayout
                android:id="@+id/freshnessRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/cardFresh"
                    android:layout_width="0dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_option_selected"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\u2728 Fresh"
                        android:textColor="@color/hf_on_background"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Caught today"
                        android:textColor="@color/hf_on_surface_variant"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="10dp"
                    android:layout_height="1dp" />

                <LinearLayout
                    android:id="@+id/cardChilled"
                    android:layout_width="0dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_option_unselected"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\u2744\uFE0F Chilled"
                        android:textColor="@color/hf_on_background"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Kept on ice"
                        android:textColor="@color/hf_on_surface_variant"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="10dp"
                    android:layout_height="1dp" />

                <LinearLayout
                    android:id="@+id/cardFrozen"
                    android:layout_width="0dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_option_unselected"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\u2744\uFE0F Frozen"
                        android:textColor="@color/hf_on_background"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="-18\u00b0 preserved"
                        android:textColor="@color/hf_on_surface_variant"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvLocationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Location"
                android:textColor="@color/hf_on_background"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvLocationValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="14dp"
                android:background="@drawable/bg_input_outline"
                android:text="Set location in dashboard"
                android:textColor="@color/hf_on_background"
                android:textSize="15sp" />


            <!-- Catch Time -->
            <TextView
                android:id="@+id/tvCatchTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Catch Time"
                android:textColor="@color/hf_on_background"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etCatchTime"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_input_outline"
                android:hint=""
                android:inputType="text"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:textColor="@color/hf_on_background"
                android:textColorHint="@color/hf_on_surface_variant"
                android:textSize="16sp" />

            <!-- Description -->
            <TextView
                android:id="@+id/tvDescLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Description"
                android:textColor="@color/hf_on_background"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_input_outline"
                android:gravity="top|start"
                android:hint="Describe your catch, preparation tips, etc."
                android:inputType="textMultiLine"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:textColor="@color/hf_on_background"
                android:textColorHint="@color/hf_on_surface_variant"
                android:textSize="16sp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

