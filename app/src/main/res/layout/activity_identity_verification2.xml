<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootBusinessDetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hf_background"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="18dp"
    android:paddingBottom="18dp">

    <!-- Back arrow (top-left) -->
    <ImageView
        android:id="@+id/btnBackTop"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:contentDescription="Back"
        android:src="@drawable/ic_back_24"
        app:tint="@color/hf_on_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Progress bars row -->
    <LinearLayout
        android:id="@+id/progressRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="1"
            android:background="@drawable/bg_step_active" />

        <View
            android:layout_width="14dp"
            android:layout_height="1dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="1"
            android:background="@drawable/bg_step_active" />

        <View
            android:layout_width="14dp"
            android:layout_height="1dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="1"
            android:background="@drawable/bg_step_inactive" />

        <View
            android:layout_width="14dp"
            android:layout_height="1dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="1"
            android:background="@drawable/bg_step_inactive" />

        <View
            android:layout_width="14dp"
            android:layout_height="1dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="1"
            android:background="@drawable/bg_step_inactive" />
    </LinearLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Business Details"
        android:textColor="@color/hf_on_background"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/progressRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Tell us about your fishing business"
        android:textColor="@color/hf_on_surface_variant"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom buttons (anchored, never cut) -->
    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:text="Back"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/hf_primary"
            android:background="@drawable/bg_button_outline" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnContinue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="Continue"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_button_primary" />
    </LinearLayout>

    <!-- Form area: constrained between subtitle and bottom buttons -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/formArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintBottom_toTopOf="@id/bottomButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Business Name label -->
        <TextView
            android:id="@+id/tvBusinessNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="Business Name"
            android:textColor="@color/hf_on_background"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etBusinessName"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_input_outline"
            android:hint="Your fishery name"
            android:inputType="text"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:textColor="@color/hf_on_background"
            android:textColorHint="@color/hf_on_surface_variant"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/tvBusinessNameLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Location label -->
        <TextView
            android:id="@+id/tvLocationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Location"
            android:textColor="@color/hf_on_background"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/etBusinessName"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etLocation"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_input_outline"
            android:hint="City, State"
            android:inputType="text"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:textColor="@color/hf_on_background"
            android:textColorHint="@color/hf_on_surface_variant"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/tvLocationLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Years label -->
        <TextView
            android:id="@+id/tvYearsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Years of Experience"
            android:textColor="@color/hf_on_background"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/etLocation"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etYears"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_input_outline"
            android:hint="10"
            android:inputType="number"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:textColor="@color/hf_on_background"
            android:textColorHint="@color/hf_on_surface_variant"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/tvYearsLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Speciality label -->
        <TextView
            android:id="@+id/tvSpecialityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Speciality"
            android:textColor="@color/hf_on_background"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/etYears"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etSpeciality"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_input_outline"
            android:hint="e.g., Deep sea fish, Prawns"
            android:inputType="text"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:textColor="@color/hf_on_background"
            android:textColorHint="@color/hf_on_surface_variant"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/tvSpecialityLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
