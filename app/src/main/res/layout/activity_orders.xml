<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootOrders"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hf_background">

    <!-- Top bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:tint="@color/hf_on_background"
            android:contentDescription="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orders"
            android:textColor="@color/hf_on_background"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/ivBack"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="12dp" />

        <TextView
            android:id="@+id/tvSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 active orders"
            android:textColor="@color/hf_on_surface_variant"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            android:layout_marginTop="2dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/dividerTop"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/hf_surface_variant"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollOrders"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/dividerTop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/contentOrders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:paddingTop="18dp"
            android:paddingBottom="22dp">

            <!-- Card 1 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardOrd1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/hf_surface"
                app:strokeWidth="1dp"
                app:strokeColor="@color/hf_surface_variant">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp">

                    <TextView
                        android:id="@+id/tvOrd1Id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ORD-001"
                        android:textColor="@color/hf_on_background"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvOrd1Ago"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 mins ago"
                        android:textColor="@color/hf_on_surface_variant"
                        android:textSize="11sp"
                        app:layout_constraintStart_toStartOf="@id/tvOrd1Id"
                        app:layout_constraintTop_toBottomOf="@id/tvOrd1Id"
                        android:layout_marginTop="2dp" />

                    <!-- Status chip -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/chipPending"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        app:cardCornerRadius="13dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/hf_secondary_container"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="Pending"
                            android:textColor="@color/hf_secondary"
                            android:textSize="11sp"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Avatar -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/avatar1"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="12dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/hf_primary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvOrd1Ago">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="PS"
                            android:textColor="@color/hf_on_primary"
                            android:textSize="11sp"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tvName1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Priya Sharma"
                        android:textColor="@color/hf_on_background"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/avatar1"
                        app:layout_constraintTop_toTopOf="@id/avatar1"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvPhone1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="+91 98765 43210"
                        android:textColor="@color/hf_on_surface_variant"
                        android:textSize="11sp"
                        app:layout_constraintStart_toEndOf="@id/avatar1"
                        app:layout_constraintTop_toBottomOf="@id/tvName1"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="2dp" />

                    <!-- Item row -->
                    <LinearLayout
                        android:id="@+id/itemRow1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:background="@color/hf_background"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/avatar1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="King Mackerel   ( 1 kg )"
                            android:textColor="@color/hf_on_surface_variant"
                            android:textSize="11sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹ 850"
                            android:textColor="@color/hf_on_background"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Time + total -->
                    <LinearLayout
                        android:id="@+id/bottomRow1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/itemRow1">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@android:drawable/ic_lock_idle_alarm"
                            android:tint="@color/hf_on_surface_variant"
                            android:contentDescription="@null" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:text="Today, 2:00 PM  -  4:00 PM"
                            android:textColor="@color/hf_on_surface_variant"
                            android:textSize="11sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹ 899"
                            android:textColor="@color/hf_primary"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 2 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardOrd2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/hf_surface"
                app:strokeWidth="1dp"
                app:strokeColor="@color/hf_surface_variant">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp">

                    <TextView
                        android:id="@+id/tvOrd2Id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ORD-002"
                        android:textColor="@color/hf_on_background"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvOrd2Ago"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25 mins ago"
                        android:textColor="@color/hf_on_surface_variant"
                        android:textSize="11sp"
                        app:layout_constraintStart_toStartOf="@id/tvOrd2Id"
                        app:layout_constraintTop_toBottomOf="@id/tvOrd2Id"
                        android:layout_marginTop="2dp" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/chipConfirmed"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        app:cardCornerRadius="13dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/hf_primary_container"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="Confirmed"
                            android:textColor="@color/hf_primary"
                            android:textSize="11sp"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/avatar2"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="12dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/hf_primary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvOrd2Ago">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="RV"
                            android:textColor="@color/hf_on_primary"
                            android:textSize="11sp"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tvName2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Rahul Verma"
                        android:textColor="@color/hf_on_background"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/avatar2"
                        app:layout_constraintTop_toTopOf="@id/avatar2"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvPhone2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="+91 98765 43211"
                        android:textColor="@color/hf_on_surface_variant"
                        android:textSize="11sp"
                        app:layout_constraintStart_toEndOf="@id/avatar2"
                        app:layout_constraintTop_toBottomOf="@id/tvName2"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="2dp" />

                    <LinearLayout
                        android:id="@+id/itemRow2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:background="@color/hf_background"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/avatar2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tiger Prawns      ( 500g )"
                            android:textColor="@color/hf_on_surface_variant"
                            android:textSize="11sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹ 600"
                            android:textColor="@color/hf_on_background"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bottomRow2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/itemRow2">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@android:drawable/ic_lock_idle_alarm"
                            android:tint="@color/hf_on_surface_variant"
                            android:contentDescription="@null" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:text="Today, 4:00 PM  -  6:00 PM"
                            android:textColor="@color/hf_on_surface_variant"
                            android:textSize="11sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹ 649"
                            android:textColor="@color/hf_primary"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 3 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardOrd3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/hf_surface"
                app:strokeWidth="1dp"
                app:strokeColor="@color/hf_surface_variant">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp">

                    <TextView
                        android:id="@+id/tvOrd3Id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ORD-003"
                        android:textColor="@color/hf_on_background"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvOrd3Ago"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 hour ago"
                        android:textColor="@color/hf_on_surface_variant"
                        android:textSize="11sp"
                        app:layout_constraintStart_toStartOf="@id/tvOrd3Id"
                        app:layout_constraintTop_toBottomOf="@id/tvOrd3Id"
                        android:layout_marginTop="2dp" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/chipPreparing"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        app:cardCornerRadius="13dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/hf_primary_container"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="Preparing"
                            android:textColor="@color/hf_primary"
                            android:textSize="11sp"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/avatar3"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="12dp"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/hf_primary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvOrd3Ago">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="AP"
                            android:textColor="@color/hf_on_primary"
                            android:textSize="11sp"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tvName3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Anjali Patel"
                        android:textColor="@color/hf_on_background"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/avatar3"
                        app:layout_constraintTop_toTopOf="@id/avatar3"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvPhone3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="+91 98765 43212"
                        android:textColor="@color/hf_on_surface_variant"
                        android:textSize="11sp"
                        app:layout_constraintStart_toEndOf="@id/avatar3"
                        app:layout_constraintTop_toBottomOf="@id/tvName3"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="2dp" />

                    <LinearLayout
                        android:id="@+id/itemRow3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:background="@color/hf_background"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/avatar3">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Pomfret   ( 2 pieces )"
                            android:textColor="@color/hf_on_surface_variant"
                            android:textSize="11sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹ 880"
                            android:textColor="@color/hf_on_background"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bottomRow3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/itemRow3">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@android:drawable/ic_lock_idle_alarm"
                            android:tint="@color/hf_on_surface_variant"
                            android:contentDescription="@null" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:text="Today, 6:00 PM  -  8:00 PM"
                            android:textColor="@color/hf_on_surface_variant"
                            android:textSize="11sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹ 880"
                            android:textColor="@color/hf_primary"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
