<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:layout_marginBottom="16dp"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/bg_doc_uploaded"
    android:gravity="center_vertical">

    <!-- Icon -->
    <FrameLayout
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_check_circle"
        android:gravity="center">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_check"
            app:tint="@android:color/white" />
    </FrameLayout>

    <!-- Text block -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fishing License"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/hf_on_background"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uploaded"
            android:textSize="15sp"
            android:textColor="@color/hf_on_surface_variant"/>
    </LinearLayout>

    <!-- Required label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Required"
        android:textSize="15sp"
        android:textColor="@color/hf_secondary"/>
</LinearLayout>
