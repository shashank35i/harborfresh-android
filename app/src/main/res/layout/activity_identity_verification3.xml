<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLegal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hf_background"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="18dp"
    android:paddingBottom="18dp">

    <!-- Back arrow -->
    <ImageView
        android:id="@+id/btnBackTop"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:contentDescription="Back"
        android:src="@drawable/ic_back_24"
        app:tint="@color/hf_on_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Progress bars (3 active, 2 inactive) -->
    <LinearLayout
        android:id="@+id/progressRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="1"
            android:background="@drawable/bg_step_active" />

        <View android:layout_width="14dp" android:layout_height="1dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="1"
            android:background="@drawable/bg_step_active" />

        <View android:layout_width="14dp" android:layout_height="1dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="1"
            android:background="@drawable/bg_step_active" />

        <View android:layout_width="14dp" android:layout_height="1dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="1"
            android:background="@drawable/bg_step_inactive" />

        <View android:layout_width="14dp" android:layout_height="1dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="1"
            android:background="@drawable/bg_step_inactive" />
    </LinearLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Legal Information"
        android:textColor="@color/hf_on_background"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/progressRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Required for seller verification"
        android:textColor="@color/hf_on_surface_variant"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom buttons (anchored) -->
    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:text="Back"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/hf_primary"
            android:background="@drawable/bg_button_outline" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnContinue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="Continue"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_button_primary" />
    </LinearLayout>

    <!-- Form + Info area -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintBottom_toTopOf="@id/bottomButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- License label -->
        <TextView
            android:id="@+id/tvLicenseLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Fishing License Number"
            android:textColor="@color/hf_on_background"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- License input -->
        <EditText
            android:id="@+id/etLicense"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_input_outline"
            android:hint="Enter license number"
            android:inputType="text"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:textColor="@color/hf_on_background"
            android:textColorHint="@color/hf_on_surface_variant"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/tvLicenseLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- GST label -->
        <TextView
            android:id="@+id/tvGstLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="GST Number (Optional)"
            android:textColor="@color/hf_on_background"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/etLicense"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- GST input -->
        <EditText
            android:id="@+id/etGst"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_input_outline"
            android:hint="22AAAAA0000A1Z5"
            android:inputType="text"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:textColor="@color/hf_on_background"
            android:textColorHint="@color/hf_on_surface_variant"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/tvGstLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Secure & Verified card -->
        <LinearLayout
            android:id="@+id/cardSecure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:background="@drawable/bg_secure_card"
            android:orientation="horizontal"
            android:padding="18dp"
            app:layout_constraintTop_toBottomOf="@id/etGst"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/icShield"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_shield_check"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSecureTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Secure &amp; Verified"
                    android:textColor="@color/hf_on_background"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSecureSub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="All information is encrypted and verified by our\nteam"
                    android:textColor="@color/hf_on_surface_variant"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
