<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootPayment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hf_background">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBarPayment"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:background="@color/hf_background"
        android:elevation="3dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBackPayment"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="4dp"
            android:src="@drawable/ic_back"
            android:tint="@color/hf_primary" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPaymentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment"
                android:textColor="@color/hf_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPaymentSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Choose payment method"
                android:textColor="@color/hf_on_surface_variant"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Scroll Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollPayment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@+id/bottomBarPayment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBarPayment">

        <LinearLayout
            android:id="@+id/contentPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="14dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">

            <!-- Payment Methods Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMethods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/hf_surface"
                app:cardCornerRadius="18dp"
                app:cardElevation="3dp"
                app:strokeColor="@color/hf_surface_variant"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- UPI -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/rowUpi"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/hf_surface"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/hf_surface_variant"
                        app:strokeWidth="1dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/iconBoxUpi"
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                app:cardBackgroundColor="@color/hf_surface_variant"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="UPI"
                                    android:textSize="16sp" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:id="@+id/tvUpiTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:text="UPI"
                                android:textColor="@color/hf_primary"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/iconBoxUpi"
                                app:layout_constraintTop_toTopOf="@+id/iconBoxUpi" />

                            <TextView
                                android:id="@+id/tvUpiSub"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Google Pay, PhonePe, Paytm"
                                android:textColor="@color/hf_on_surface_variant"
                                android:textSize="11sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/tvUpiTitle"
                                app:layout_constraintTop_toBottomOf="@+id/tvUpiTitle" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <!-- Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/rowCard"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/hf_surface"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/hf_surface_variant"
                        app:strokeWidth="1dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/iconBoxCard"
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                app:cardBackgroundColor="@color/hf_surface_variant"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="CARD"
                                    android:textSize="16sp" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:id="@+id/tvCardTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:text="Credit / Debit Card"
                                android:textColor="@color/hf_primary"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/iconBoxCard"
                                app:layout_constraintTop_toTopOf="@+id/iconBoxCard" />

                            <TextView
                                android:id="@+id/tvCardSub"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Visa, Mastercard, RuPay"
                                android:textColor="@color/hf_on_surface_variant"
                                android:textSize="11sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/tvCardTitle"
                                app:layout_constraintTop_toBottomOf="@+id/tvCardTitle" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <!-- Wallet -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/rowWallet"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardBackgroundColor="@color/hf_surface"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/hf_surface_variant"
                        app:strokeWidth="1dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/iconBoxWallet"
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                app:cardBackgroundColor="@color/hf_surface_variant"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="WAL"
                                    android:textSize="16sp" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:id="@+id/tvWalletTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:text="Wallet"
                                android:textColor="@color/hf_primary"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/iconBoxWallet"
                                app:layout_constraintTop_toTopOf="@+id/iconBoxWallet" />

                            <TextView
                                android:id="@+id/tvWalletSub"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Paytm, Amazon Pay"
                                android:textColor="@color/hf_on_surface_variant"
                                android:textSize="11sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/tvWalletTitle"
                                app:layout_constraintTop_toBottomOf="@+id/tvWalletTitle" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Selected COD -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCOD"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginTop="14dp"
                app:cardBackgroundColor="@color/hf_primary"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/iconBoxCOD"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        app:cardBackgroundColor="@color/hf_primary"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="COD"
                            android:textSize="16sp" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tvCODTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Cash on Delivery"
                        android:textColor="@color/hf_on_primary"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/tvCheck"
                        app:layout_constraintStart_toEndOf="@+id/iconBoxCOD"
                        app:layout_constraintTop_toTopOf="@+id/iconBoxCOD" />

                    <TextView
                        android:id="@+id/tvCODSub"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Pay when you receive"
                        android:textColor="@color/hf_on_surface_variant"
                        android:textSize="11sp"
                        app:layout_constraintEnd_toEndOf="@+id/tvCODTitle"
                        app:layout_constraintStart_toStartOf="@+id/tvCODTitle"
                        app:layout_constraintTop_toBottomOf="@+id/tvCODTitle" />

                    <TextView
                        android:id="@+id/tvCheck"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:gravity="center"
                        android:text="OK"
                        android:textColor="@color/hf_on_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/iconBoxCOD"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/iconBoxCOD" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Order Summary -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardOrderSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:cardBackgroundColor="@color/hf_surface"
                app:cardCornerRadius="18dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Summary"
                        android:textColor="@color/hf_primary"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Subtotal"
                            android:textColor="@color/hf_on_surface_variant"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvSubtotalValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rs 0"
                            android:textColor="@color/hf_primary"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Delivery Fee"
                            android:textColor="@color/hf_on_surface_variant"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvDeliveryFeeValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rs 0"
                            android:textColor="@color/hf_primary"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Discount"
                            android:textColor="@color/hf_tertiary"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvDiscountValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- Rs 0"
                            android:textColor="@color/hf_tertiary"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="12dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/hf_surface_variant" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total"
                            android:textColor="@color/hf_primary"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvTotalValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rs 0"
                            android:textColor="@color/hf_primary"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Secure Note -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSecure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:cardBackgroundColor="@color/hf_surface_variant"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/secureIconBox"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:cardBackgroundColor="@color/hf_surface_variant"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="SEC"
                            android:textSize="14sp" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:id="@+id/tvSecureText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Your payment is secured with 256-bit SSL\nencryption"
                        android:textColor="@color/hf_primary"
                        android:textSize="11sp"
                        app:layout_constraintBottom_toBottomOf="@+id/secureIconBox"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/secureIconBox"
                        app:layout_constraintTop_toTopOf="@+id/secureIconBox" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="140dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Button Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomBarPayment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/hf_background"
        android:elevation="10dp"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlaceOrder"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:text="Place Order"
            android:textAllCaps="false"
            android:textColor="@color/hf_on_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            app:backgroundTint="@color/hf_primary"
            app:cornerRadius="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
