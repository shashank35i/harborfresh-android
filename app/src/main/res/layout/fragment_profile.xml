<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hf_background">

    <!-- Header gradient -->
    <View
        android:id="@+id/headerBg"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:background="@drawable/bg_profile_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textColor="@android:color/white"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginStart="22dp"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Scroll body -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/profileScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/contentColumn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="22dp">

            <!-- Profile Card -->
            <LinearLayout
                android:id="@+id/cardProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                android:layout_marginTop="86dp"
                android:background="@drawable/bg_card_white_26"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:elevation="10dp">

                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_avatar_placeholder"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_circle_white"
                    android:clipToOutline="true" />

                <LinearLayout
                    android:id="@+id/profileTextCol"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/hf_on_background"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text=""
                        android:textColor="@color/hf_on_surface_variant"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text=""
                        android:textColor="@color/hf_on_surface_variant"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/icArrowProfile"
                    android:layout_width="22dp"
                    android:visibility="invisible"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="@color/hf_on_surface_variant" />
            </LinearLayout>

            <!-- Stats Row -->
            <LinearLayout
                android:id="@+id/statsRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/cardOrders"
                    android:layout_width="0dp"
                    android:layout_height="92dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_card_white_22"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:elevation="1dp">

                    <TextView
                        android:id="@+id/tvOrdersValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textColor="@color/hf_on_background"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvOrdersLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Orders"
                        android:textColor="@color/hf_on_surface_variant"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardSaved"
                    android:layout_width="0dp"
                    android:layout_height="92dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bg_card_white_22"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:elevation="1dp">

                    <TextView
                        android:id="@+id/tvSavedValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹850"
                        android:textColor="@color/hf_on_background"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvSavedLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Saved"
                        android:textColor="@color/hf_on_surface_variant"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardPoints"
                    android:layout_width="0dp"
                    android:layout_height="92dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_card_white_22"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:elevation="1dp">

                    <TextView
                        android:id="@+id/tvPointsValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="240"
                        android:textColor="@color/hf_on_background"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPointsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Points"
                        android:textColor="@color/hf_on_surface_variant"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- HarborFresh+ Promo (WHITE background) -->
            <LinearLayout
                android:id="@+id/cardPromo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/bg_card_white_26"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="18dp"
                android:elevation="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPromoTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HarborFresh+"
                        android:textColor="@color/hf_primary"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPromoTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Get 15% off every order"
                        android:textColor="@color/hf_on_background"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPromoSub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Subscribe &amp; save more"
                        android:textColor="@color/hf_on_surface_variant"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/icPromoArrow"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:visibility="invisible"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="@color/hf_on_surface_variant" />
            </LinearLayout>

            <!-- Menu Card (WHITE background) -->
            <LinearLayout
                android:id="@+id/cardMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_card_white_26"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:elevation="10dp">

                <!-- Row 1 -->
                <LinearLayout
                    android:id="@+id/rowSavedAddresses"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_icon_gray_14"
                        android:foregroundGravity="center">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_pin"
                            app:tint="@color/hf_on_surface_variant" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_weight="1"
                        android:text="Saved Addresses"
                        android:textColor="@color/hf_on_background"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:gravity="center"
                        android:id="@+id/tvAddressCount"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:background="@drawable/bg_badge_dark" />

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/hf_on_surface_variant" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/hf_surface_variant" />

                <!-- Row 2 -->
                <LinearLayout
                    android:id="@+id/rowPayment"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_icon_gray_14">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_card"
                            app:tint="@color/hf_on_surface_variant" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_weight="1"
                        android:text="Payment Methods"
                        android:textColor="@color/hf_on_background"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/hf_on_surface_variant" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/hf_surface_variant" />

                <!-- Row 3 -->
                <LinearLayout
                    android:id="@+id/rowFavorites"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_icon_gray_14">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_heart"
                            app:tint="@color/hf_on_surface_variant" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_weight="1"
                        android:text="Favorites"
                        android:textColor="@color/hf_on_background"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvFavoritesCount"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:background="@drawable/bg_badge_dark" />

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/hf_on_surface_variant" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/hf_surface_variant" />

                <!-- Row 4 -->
                <LinearLayout
                    android:id="@+id/rowNotifications"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_icon_gray_14">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_bell"
                            app:tint="@color/hf_on_surface_variant" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_weight="1"
                        android:text="Notifications"
                        android:textColor="@color/hf_on_background"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/hf_on_surface_variant" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/hf_surface_variant" />

                <!-- Row 5 -->
                <LinearLayout
                    android:id="@+id/rowPreferences"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_icon_gray_14">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_settings"
                            app:tint="@color/hf_on_surface_variant" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_weight="1"
                        android:text="Preferences"
                        android:textColor="@color/hf_on_background"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/hf_on_surface_variant" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/hf_surface_variant" />

                <!-- Row 6 (Refer & Earn in orange) -->
                <LinearLayout
                    android:id="@+id/rowRefer"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_icon_orange_soft">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_gift"
                            app:tint="@color/hf_secondary" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_weight="1"
                        android:text="Refer &amp; Earn"
                        android:textColor="@color/hf_secondary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/hf_on_surface_variant" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/hf_surface_variant" />

                <!-- Row 7 -->
                <LinearLayout
                    android:id="@+id/rowHelp"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_icon_gray_14">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_help"
                            app:tint="@color/hf_on_surface_variant" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_weight="1"
                        android:text="Help &amp; Support"
                        android:textColor="@color/hf_on_background"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/hf_on_surface_variant" />
                </LinearLayout>

            </LinearLayout>

            <!-- Sign out -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSignOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_gravity="center_horizontal"
                android:text="Sign Out"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/hf_error"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/ic_logout_red"
                android:drawablePadding="10dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom navigation placeholder (you can replace with your BottomNavigationView) -->
    <View
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/hf_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
