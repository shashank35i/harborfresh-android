<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hf_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarSellerDetail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            android:title="Seller Detail"
            android:titleTextColor="@color/hf_primary"
            app:navigationIcon="@drawable/ic_back_24"
            app:navigationIconTint="@color/hf_primary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp"
                    android:background="@color/hf_surface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tvSellerName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Seller Name"
                                android:textColor="@color/hf_primary"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/tvSellerEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="email"
                                android:textColor="@color/hf_on_surface_variant"
                                android:layout_marginTop="4dp" />
                            <TextView
                                android:id="@+id/tvSellerPhone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="phone"
                                android:textColor="@color/hf_on_surface_variant"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/statusChip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_status_pill_gray"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:text="Pending"
                            android:textColor="@color/hf_primary"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:cardCornerRadius="18dp"
                android:background="@color/hf_surface"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/hf_surface"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Identity"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/hf_primary" />

                    <TextView
                        android:id="@+id/tvAadhaar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aadhaar: pending"
                        android:textColor="@color/hf_on_surface_variant"
                        android:layout_marginTop="8dp" />
                    <TextView
                        android:id="@+id/tvSelfie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selfie: pending"
                        android:textColor="@color/hf_on_surface_variant"
                        android:layout_marginTop="6dp" />
                    <TextView
                        android:id="@+id/tvFace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Face match: pending"
                        android:textColor="@color/hf_on_surface_variant"
                        android:layout_marginTop="6dp" />
                    <TextView
                        android:id="@+id/tvPolice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Police: pending"
                        android:textColor="@color/hf_on_surface_variant"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:cardCornerRadius="18dp"
                android:background="@color/hf_surface"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/hf_surface"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Documents"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/hf_primary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Aadhaar Document"
                            android:textColor="@color/hf_on_surface_variant" />
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnViewAadhaar"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:minWidth="0dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="View"
                            android:textColor="@color/hf_on_primary"
                            android:background="@drawable/bg_button_primary_dark_22" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Selfie"
                            android:textColor="@color/hf_on_surface_variant" />
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnViewSelfie"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:minWidth="0dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:text="View"
                            android:textColor="@color/hf_on_primary"
                            android:background="@drawable/bg_button_primary_dark_22" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="14dp"
                    android:background="@color/hf_surface"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnReject"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button_primary_dark_22"
                        android:text="Reject"
                        android:textColor="@color/hf_on_primary" />

                    <View
                        android:layout_width="12dp"
                        android:layout_height="1dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnApprove"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button_green_22"
                        android:text="Approve"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
