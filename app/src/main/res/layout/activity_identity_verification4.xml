<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hf_background"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="18dp"
    android:paddingBottom="18dp">

    <!-- Back -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/ic_back_24"
        app:tint="@color/hf_on_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Progress row -->
    <LinearLayout
        android:id="@+id/progressRow"
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:layout_marginTop="26dp"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View android:layout_width="0dp" android:layout_height="6dp" android:layout_weight="1" android:background="@drawable/bg_step_active"/>
        <View android:layout_width="8dp" android:layout_height="6dp"/>
        <View android:layout_width="0dp" android:layout_height="6dp" android:layout_weight="1" android:background="@drawable/bg_step_active"/>
        <View android:layout_width="8dp" android:layout_height="6dp"/>
        <View android:layout_width="0dp" android:layout_height="6dp" android:layout_weight="1" android:background="@drawable/bg_step_active"/>
        <View android:layout_width="8dp" android:layout_height="6dp"/>
        <View android:layout_width="0dp" android:layout_height="6dp" android:layout_weight="1" android:background="@drawable/bg_step_active"/>
        <View android:layout_width="8dp" android:layout_height="6dp"/>
        <View android:layout_width="0dp" android:layout_height="6dp" android:layout_weight="1" android:background="@drawable/bg_step_inactive"/>
    </LinearLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Upload Documents"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/hf_on_background"
        app:layout_constraintTop_toBottomOf="@id/progressRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Required for account verification"
        android:textSize="16sp"
        android:textColor="@color/hf_on_surface_variant"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Bottom buttons -->
    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBackBottom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:text="Back"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/hf_primary"
        style="@style/HF.Button.Outline"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="Continue"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
        style="@style/HF.Button.Primary"/>
    </LinearLayout>

    <!-- Document list -->
    <LinearLayout
        android:id="@+id/docsContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintBottom_toTopOf="@id/bottomButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_white_22"
            android:orientation="vertical"
            android:padding="14dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fishing License"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/hf_on_background" />

            <TextView
                android:id="@+id/tvLicenseStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Not uploaded"
                android:textColor="@color/hf_on_surface_variant" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUploadLicense"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:text="Choose file"
                android:textAllCaps="false"
        style="@style/HF.Button.Outline" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_white_22"
            android:orientation="vertical"
            android:padding="14dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Government ID"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/hf_on_background" />

            <TextView
                android:id="@+id/tvIdStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Not uploaded"
                android:textColor="@color/hf_on_surface_variant" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUploadId"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:text="Choose file"
                android:textAllCaps="false"
        style="@style/HF.Button.Outline" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_white_22"
            android:orientation="vertical"
            android:padding="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address Proof"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/hf_on_background" />

            <TextView
                android:id="@+id/tvAddressStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Not uploaded"
                android:textColor="@color/hf_on_surface_variant" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUploadAddress"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:text="Choose file"
                android:textAllCaps="false"
        style="@style/HF.Button.Outline" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
