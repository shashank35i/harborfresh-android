<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="22dp" />
            <gradient
                android:angle="315"
                android:startColor="@color/hf_primary"
                android:centerColor="@color/hf_primary"
                android:endColor="@color/hf_primary"
                android:type="linear" />
        </shape>
    </item>

    <item android:left="220dp" android:top="70dp">
        <shape android:shape="oval">
            <size android:width="140dp" android:height="140dp" />
            <solid android:color="#1AFFFFFF" />
        </shape>
    </item>

    <item android:left="260dp" android:top="110dp">
        <shape android:shape="oval">
            <size android:width="90dp" android:height="90dp" />
            <solid android:color="#12FFFFFF" />
        </shape>
    </item>

</layer-list>
