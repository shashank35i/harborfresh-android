<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HF.Button.Primary" parent="Widget.Material3.Button">
        <item name="cornerRadius">18dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/hf_primary</item>
        <item name="android:textColor">@color/hf_on_primary</item>
        <item name="android:minHeight">52dp</item>
    </style>

    <style name="HF.Button.Outline" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">18dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/hf_outline</item>
        <item name="android:textColor">@color/hf_primary</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="HF.Button.Tonal" parent="Widget.Material3.Button.TonalButton">
        <item name="cornerRadius">18dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/hf_primary_container</item>
        <item name="android:textColor">@color/hf_on_primary_container</item>
        <item name="android:minHeight">48dp</item>
    </style>
</resources>
