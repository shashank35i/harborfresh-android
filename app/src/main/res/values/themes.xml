<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.HarborFresh" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/hf_primary</item>
        <item name="colorOnPrimary">@color/hf_on_primary</item>
        <item name="colorPrimaryContainer">@color/hf_primary_container</item>
        <item name="colorOnPrimaryContainer">@color/hf_on_primary_container</item>

        <item name="colorSecondary">@color/hf_secondary</item>
        <item name="colorOnSecondary">@color/hf_on_secondary</item>
        <item name="colorSecondaryContainer">@color/hf_secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/hf_on_secondary_container</item>

        <item name="colorTertiary">@color/hf_tertiary</item>
        <item name="colorOnTertiary">@color/hf_on_tertiary</item>
        <item name="colorTertiaryContainer">@color/hf_tertiary_container</item>
        <item name="colorOnTertiaryContainer">@color/hf_on_tertiary_container</item>

        <item name="android:colorBackground">@color/hf_background</item>
        <item name="colorOnBackground">@color/hf_on_background</item>
        <item name="colorSurface">@color/hf_surface</item>
        <item name="colorOnSurface">@color/hf_on_surface</item>
        <item name="colorSurfaceVariant">@color/hf_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/hf_on_surface_variant</item>
        <item name="colorOutline">@color/hf_outline</item>

        <item name="colorError">@color/hf_error</item>
        <item name="colorOnError">@color/hf_on_error</item>

        <item name="android:statusBarColor">@color/hf_background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowAnimationStyle">@style/AppActivityAnimation</item>

        <item name="shapeAppearanceSmallComponent">@style/Shape.HarborFresh.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/Shape.HarborFresh.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/Shape.HarborFresh.Large</item>
    </style>

    <style name="Theme.HarborFresh.Onboarding" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/hf_primary</item>
        <item name="colorOnPrimary">@color/hf_on_primary</item>
        <item name="android:colorBackground">@color/hf_background</item>
        <item name="colorOnBackground">@color/hf_on_background</item>
        <item name="android:statusBarColor">@color/hf_background</item>
        <item name="android:navigationBarColor">@color/hf_background</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.HarborFresh.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/hf_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

    <style name="Theme.HarborFresh.Onboarding.Splash" parent="Theme.HarborFresh.Onboarding">
        <item name="android:windowSplashScreenBackground">@color/hf_background</item>
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
    </style>

    <style name="Shape.HarborFresh.Small" parent="ShapeAppearance.Material3.Corner.Small">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Shape.HarborFresh.Medium" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">14dp</item>
    </style>

    <style name="Shape.HarborFresh.Large" parent="ShapeAppearance.Material3.Corner.Large">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>
    </style>

    <style name="BottomNavIndicatorPurple">
        <item name="android:alpha">0.18</item>
    </style>
</resources>
